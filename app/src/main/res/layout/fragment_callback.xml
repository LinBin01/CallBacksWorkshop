<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/toast_callback_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="58dp"
        android:text="Run Toast Method From Activity"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/change_textview_button"
        app:layout_constraintEnd_toEndOf="@+id/change_textview_button"
        app:layout_constraintStart_toStartOf="@+id/change_textview_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/change_textview_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="58dp"
        android:text="Change TextView Button"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/change_background_callback_button"
        app:layout_constraintEnd_toEndOf="@+id/change_background_callback_button"
        app:layout_constraintStart_toStartOf="@+id/change_background_callback_button"
        app:layout_constraintTop_toBottomOf="@+id/toast_callback_button" />

    <Button
        android:id="@+id/change_background_callback_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="59dp"
        android:text="Change Activity Background"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/remove_callback_button"
        app:layout_constraintEnd_toEndOf="@+id/remove_callback_button"
        app:layout_constraintStart_toStartOf="@+id/remove_callback_button"
        app:layout_constraintTop_toBottomOf="@+id/change_textview_button" />

    <Button
        android:id="@+id/remove_callback_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Remove Fragment From Activity"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_background_callback_button" />
</android.support.constraint.ConstraintLayout>